<%- include header %>

<div class="main-container">
	<div class="main-content">
		<div class="row">
			<div class="col-sm-10 col-sm-offset-1">
				<div class="login-container">
					<div class="center">
						<h1>
							<i class="ace-icon fa fa-gift green"></i>
							<span class="red">My</span>
							<span class="white" id="id-text2">Diary</span>
						</h1>
						<h4 class="blue" id="id-company-text">&copy;Peking University </h4>
					</div>
					<div class="space-6"></div>
					<div class="position-relative">
						<div id="signup-box" class="login-box visible widget-box no-border">
                            <div class="widget-body">
                                <div class="widget-main">
									<h4 class="header green lighter bigger">
										<i class="ace-icon fa fa-users blue"></i>
										New User Registration
									</h4>

									<div class="space-6"></div>
									<p> Enter your details to begin: </p>

									<form method="post">
										<div class="form-group">
											<span class="block input-icon input-icon-right">
												<input type="text" class="form-control" name="username" <% if(err1==''){ %> placeholder="用户名" <%} else{ %> placeholder="<%= err1 %>"<%}%>>
												<i class="ace-icon fa fa-user"></i>
											</span>
										</div>
										<div class="form-group">
											<span class="block input-icon input-icon-right">
												<input type="password" class="form-control" name="password" <% if(err2==''){ %> placeholder="密码" <%} else{ %> placeholder="<%= err2 %>"<%}%>>
												<i class="ace-icon fa fa-lock"></i>
											</span>
										</div>
										<div class="form-group">
                                            <span class="block input-icon input-icon-right">
											    <input type="password" class="form-control" name="passwordRepeat"<% if(err2==''){ %> placeholder="确认密码" <%} else{ %> placeholder="<%= err2 %>"<%}%>>
										        <i class="ace-icon fa fa-lock"></i>
											</span>
                                        </div>
                                        <div class="clearfix">
                                            <button type="submit" class="width-65 pull-right btn btn-sm btn-success">
                                                <i class="ace-icon fa fa-arrow-right icon-on-right"></i>
                                                <span class="bigger-110">注册</span>
                                            </button>
                                        </div>
									</form>

								</div>

							</div><!-- /.widget-body -->
						</div><!-- /.signup-box -->
					</div><!-- /.position-relative -->
				</div>
			</div><!-- /.col -->
		</div><!-- /.row -->
	</div><!-- /.main-content -->
</div><!-- /.main-container -->

<%- include footer %>